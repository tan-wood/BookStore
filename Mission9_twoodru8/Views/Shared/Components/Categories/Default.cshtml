
@model IEnumerable<string>

<div class="btn-group-vertical">
    <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="" asp-route-pageNum="1" class="btn btn-outline-secondary">Home</a><br />

    @foreach (string t in Model)
    {
        <a asp-controller="Home" asp-action="Index" asp-route-bookCategory="@t" 
           asp-route-pageNum="1" class="btn @(ViewBag.SelectedCategory == t ? "btn-primary" : "btn-outline-secondary")">@t</a><br />
        

    }
</div>
